FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

UCast    (0 0 -0.001);

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform $UCast;

boundaryField
{
    "(hot-top|ceramic|graphite|mould|air-gap|water-film|free-surface|ram)"
    {
        type            zeroGradient;
    }

    symmetry_planes
    {
        type            symmetry;
    }
}

